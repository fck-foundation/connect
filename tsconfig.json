{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "declaration": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "ts-node": {
      "esm": true
    },
    "lib": ["es2022", "esnext.bigint"],
    "include": ["./src"],
    "exclude": ["node_modules/**"],
    "typeRoots": ["./node_modules/@types"]
  }